{
    "name": "traderinteractive/exceptions",
    "description": "Collection of standard exception classes",
    "keywords": [
        "exception",
        "error",
        "throwable"
    ],
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.3 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "TraderInteractive\\Exceptions\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
